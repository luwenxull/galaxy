{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "no-tabs": "off",
    "indent": [
      "error",
      2
    ],
    "semi": "off",
    "require-jsdoc": "off",
    "arrow-parens": "off",
    "eol-last": "off",
    "object-curly-spacing": [
      2,
      "always"
    ],
    "arrow-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "max-len": [2, 120]
  },
  "extends": "google"
}